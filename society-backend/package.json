{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "nest build",
    "vercel-build": "nest build && mkdir -p /vercel/output && cp -r dist/* /vercel/output/ && cp -r node_modules /vercel/output/ && cp tsconfig.json /vercel/output/",
    "dev": "nest start --watch",
    "start": "node dist/main",
    "test": "jest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@aws-sdk/client-s3": "^3.940.0",
    "@aws-sdk/s3-request-presigner": "^3.940.0",
    "@google/generative-ai": "^0.24.1",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.0",
    "hyper-express": "^6.17.3",
    "@nestjs/schedule": "^5.0.1",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@supabase/supabase-js": "^2.86.0",
    "@upstash/qstash": "^2.8.4",
    "@upstash/workflow": "^0.2.22",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "common": "^0.2.5",
    "crypto": "^1.0.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "ioredis": "^5.8.2",
    "joi": "^17.13.3",
    "oauth-1.0a": "^2.2.6",
    "optional": "^0.1.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "prisma": "^7.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@swc/cli": "^0.3.14",
    "@swc/core": "^1.15.3",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.25",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.6",
    "install": "^0.13.0",
    "jest": "^29.7.0",
    "swc-loader": "^0.2.6",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^@generated/(.*)$": "<rootDir>/generated/$1"
    }
  }
}
